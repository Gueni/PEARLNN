# PEARLNN Environment Configuration
# Copy this file to .env and modify the values as needed
# All settings are optional - defaults will be used if not set

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Neural Network Architecture
PEARLNN_MODEL_HIDDEN_LAYERS=512,256,128
PEARLNN_MODEL_DROPOUT_RATE=0.2
PEARLNN_MODEL_ACTIVATION=relu

# Training Parameters
PEARLNN_MODEL_LEARNING_RATE=0.001
PEARLNN_MODEL_BATCH_SIZE=32
PEARLNN_MODEL_EPOCHS=1000
PEARLNN_MODEL_KL_WEIGHT=0.01

# Bayesian Inference
PEARLNN_MODEL_MONTE_CARLO_SAMPLES=50
PEARLNN_MODEL_PRIOR_SIGMA=1.0

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Early Stopping
PEARLNN_TRAINING_EARLY_STOPPING_PATIENCE=50
PEARLNN_TRAINING_EARLY_STOPPING_DELTA=0.001

# Validation
PEARLNN_TRAINING_VALIDATION_SPLIT=0.2
PEARLNN_TRAINING_CROSS_VALIDATION_FOLDS=5

# Performance
PEARLNN_TRAINING_MAX_TRAINING_TIME=3600
PEARLNN_TRAINING_USE_GPU=true
PEARLNN_TRAINING_NUM_WORKERS=4

# Checkpointing
PEARLNN_TRAINING_SAVE_CHECKPOINTS=true
PEARLNN_TRAINING_CHECKPOINT_INTERVAL=100
PEARLNN_TRAINING_KEEP_BEST_ONLY=true

# =============================================================================
# DATA PROCESSING CONFIGURATION
# =============================================================================

# CSV Processing
PEARLNN_DATA_CSV_TIME_COLUMN_AUTO_DETECT=true
PEARLNN_DATA_CSV_DEFAULT_TIME_COLUMN=time
PEARLNN_DATA_CSV_SAMPLING_RATE_ESTIMATION=true

# Image Processing
PEARLNN_DATA_IMAGE_ENHANCE_CONTRAST=true
PEARLNN_DATA_IMAGE_REMOVE_GRID=true
PEARLNN_DATA_IMAGE_INVERT_IF_NEEDED=true
PEARLNN_DATA_IMAGE_EXTRACTION_METHOD=projection
PEARLNN_DATA_IMAGE_MIN_CURVE_POINTS=10
PEARLNN_DATA_IMAGE_SMOOTHING_WINDOW=5

# Feature Extraction
PEARLNN_DATA_FEATURES_TIME_DOMAIN=true
PEARLNN_DATA_FEATURES_FREQUENCY_DOMAIN=true
PEARLNN_DATA_FEATURES_STATISTICAL=true
PEARLNN_DATA_FEATURES_SHAPE_CHARACTERISTICS=true
PEARLNN_DATA_FEATURES_NORMALIZATION=standardize

# =============================================================================
# COMMUNITY CONFIGURATION
# =============================================================================

# Synchronization
PEARLNN_COMMUNITY_SYNC_ON_STARTUP=true
PEARLNN_COMMUNITY_AUTO_UPLOAD=true
PEARLNN_COMMUNITY_UPLOAD_INTERVAL=86400

# Privacy
PEARLNN_COMMUNITY_CONTRIBUTION_ANONYMITY=true
PEARLNN_COMMUNITY_SHARE_TRAINING_DATA=false
PEARLNN_COMMUNITY_SHARE_MODEL_IMPROVEMENTS=true

# IPFS Gateways (comma-separated)
PEARLNN_COMMUNITY_IPFS_GATEWAYS=https://ipfs.io/ipfs/,https://gateway.pinata.cloud/ipfs/,https://cloudflare-ipfs.com/ipfs/

# Contribution Tracking
PEARLNN_COMMUNITY_TRACK_CONTRIBUTIONS=true
PEARLNN_COMMUNITY_MAX_CONTRIBUTIONS_STORED=1000

# =============================================================================
# COMPONENT-SPECIFIC CONFIGURATION
# =============================================================================

# Global Component Settings
PEARLNN_COMPONENTS_DEFAULT_UNCERTAINTY_THRESHOLD=0.1
PEARLNN_COMPONENTS_DEFAULT_CONFIDENCE_INTERVAL=0.95

# Inductor Settings
PEARLNN_COMPONENTS_INDUCTOR_INPUT_FEATURES=35
PEARLNN_COMPONENTS_INDUCTOR_FEATURE_EXTRACTION_FREQUENCY_BANDS=100,1000,1000000,10000000
PEARLNN_COMPONENTS_INDUCTOR_IMPEDANCE_REFERENCE=50
PEARLNN_COMPONENTS_INDUCTOR_Q_MEASUREMENT_FREQUENCY=1000000

# =============================================================================
# PATH CONFIGURATION
# =============================================================================

# Directory Structure
PEARLNN_PATHS_MODELS_DIR=models
PEARLNN_PATHS_DATA_DIR=data
PEARLNN_PATHS_CACHE_DIR=cache
PEARLNN_PATHS_COMMUNITY_DIR=community
PEARLNN_PATHS_RESULTS_DIR=results
PEARLNN_PATHS_LOGS_DIR=logs

# File Naming
PEARLNN_PATHS_MODEL_FILENAME={component}_model_{timestamp}.pt
PEARLNN_PATHS_RESULTS_FILENAME=analysis_{component}_{timestamp}.json
PEARLNN_PATHS_CONTRIBUTION_FILENAME=contribution_{timestamp}.json

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels
PEARLNN_LOGGING_CONSOLE_LEVEL=INFO
PEARLNN_LOGGING_FILE_LEVEL=DEBUG
PEARLNN_LOGGING_LOG_FILE=pearlnn.log

# Log Formatting
PEARLNN_LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
PEARLNN_LOGGING_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Log Rotation
PEARLNN_LOGGING_MAX_FILE_SIZE=10485760
PEARLNN_LOGGING_BACKUP_COUNT=5

# =============================================================================
# VISUALIZATION CONFIGURATION
# =============================================================================

# Plot Styles
PEARLNN_VISUALIZATION_STYLE=default
PEARLNN_VISUALIZATION_COLOR_PALETTE=husl

# Figure Settings
PEARLNN_VISUALIZATION_DPI=300
PEARLNN_VISUALIZATION_FIGURE_SIZE_DEFAULT=10,6
PEARLNN_VISUALIZATION_FIGURE_SIZE_COMPARISON=12,8

# Save Settings
PEARLNN_VISUALIZATION_SAVE_FORMAT=png
PEARLNN_VISUALIZATION_SAVE_QUALITY=95

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Caching
PEARLNN_PERFORMANCE_ENABLE_CACHING=true
PEARLNN_PERFORMANCE_CACHE_MAX_AGE=86400
PEARLNN_PERFORMANCE_MODEL_CACHE_SIZE=500000000
PEARLNN_PERFORMANCE_FEATURE_CACHE_SIZE=100000000

# Parallel Processing
PEARLNN_PERFORMANCE_MAX_WORKERS=4
PEARLNN_PERFORMANCE_CHUNK_SIZE=1000

# Memory Management
PEARLNN_PERFORMANCE_MAX_MEMORY_USAGE=0.8
PEARLNN_PERFORMANCE_CLEANUP_INTERVAL=3600

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Bayesian Settings
PEARLNN_ADVANCED_VARIATIONAL_SAMPLES=10
PEARLNN_ADVANCED_MC_DROPOUT_RATE=0.1

# Regularization
PEARLNN_ADVANCED_L2_REGULARIZATION=0.001
PEARLNN_ADVANCED_GRADIENT_NOISE=0.01

# Experimental Features
PEARLNN_ADVANCED_ENABLE_EXPERIMENTAL=false
PEARLNN_ADVANCED_USE_ATTENTION=false
PEARLNN_ADVANCED_ENSEMBLE_SIZE=1

# =============================================================================
# SECURITY AND PRIVACY
# =============================================================================

# Data Privacy
PEARLNN_SECURITY_NO_PERSONAL_DATA=true
PEARLNN_SECURITY_ANONYMIZE_CONTRIBUTIONS=true
PEARLNN_SECURITY_LOCAL_DATA_ONLY=false

# Network Security
PEARLNN_SECURITY_VERIFY_SSL=true
PEARLNN_SECURITY_TIMEOUT=30
PEARLNN_SECURITY_MAX_REDIRECTS=5

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Local Backups
PEARLNN_BACKUP_LOCAL_ENABLED=true
PEARLNN_BACKUP_LOCAL_INTERVAL=86400
PEARLNN_BACKUP_LOCAL_MAX_BACKUPS=7
PEARLNN_BACKUP_LOCAL_DIR=backups

# Recovery
PEARLNN_BACKUP_RECOVERY_AUTO_RECOVERY=true
PEARLNN_BACKUP_RECOVERY_TIMEOUT=300

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Debug Mode
PEARLNN_DEBUG_ENABLED=false
PEARLNN_DEBUG_VERBOSE_LOGGING=false
PEARLNN_DEBUG_SAVE_INTERMEDIATES=false

# Testing
PEARLNN_TESTING_USE_SYNTHETIC_DATA=false
PEARLNN_TESTING_SKIP_COMMUNITY_SYNC=true
PEARLNN_TESTING_DISABLE_GPU=false

# =============================================================================
# API AND INTEGRATION (Future Features)
# =============================================================================

# External API Keys (commented out for now)
# PEARLNN_API_OPENAI_KEY=your_openai_key_here
# PEARLNN_API_HUGGINGFACE_TOKEN=your_hf_token_here
# PEARLNN_API_GITHUB_TOKEN=your_github_token_here

# Web Interface (Future)
# PEARLNN_WEB_ENABLED=false
# PEARLNN_WEB_PORT=8000
# PEARLNN_WEB_HOST=localhost

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env in the project root
# 2. Uncomment and modify only the settings you need to change
# 3. All values have sensible defaults
# 4. Boolean values: true/false (case-insensitive)
# 5. Arrays/lists: comma-separated values
# 6. Numbers: integers or floats as appropriate
# 7. Environment variables take precedence over config file settings